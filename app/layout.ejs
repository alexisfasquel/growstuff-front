<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GrowStuff | <%= post.title %></title>
    <!-- build:css(.tmp) styles/app.css -->
    <link rel="stylesheet" href="/styles/app.css" />
    <link rel="stylesheet" href="/bower_components/pygments/css/monokai.css" />
    <!-- endbuild -->
    <!-- build:js scripts/vendor/modernizr.js -->
    <script src="/bower_components/modernizr/modernizr.js"></script>
    <!-- endbuild -->
  </head>
  <body>
    <header role="banner" class="top-header fixed">
      <div class="row">
        <div class="large-6 columns">
          <a href="/" class="logo">
            <img src="/images/logo_m.png" title="GrowStuff logo"/>
            <span>GrowStuff <em>BETA</em><span>
          </a>
        </div>
        <div class="large-6 columns">
          <nav role="navigation" class="menu">
            <ul>
              <li><a href="/">Home</a></li>
              <li class="active"><a href="/posts/diy/index.html">Do It Yourself</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <div class="post-container row">
      <div class="large-3 medium-4 columns">
        <div class="hide-for-small">
          <ul class="side-nav">
            <% posts.forEach(function (post) { %>
                <li><a href="/<%= post.url %>"><%= post.title %></a></li>
            <% }); %>
          </ul>
        </div>
      </div>
      <div class="large-9 medium-8 columns">
        <h1><%= post.title %></h1>
        <%= post.subtitle %>
        <hr/>

        <%- post.content %>
      </div>
    </div>

    <!-- build:js scripts/vendor/vendor.js -->
    <!-- bower:js -->
    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/foundation/js/foundation.min.js"></script>
    <script src="/js/app.js"></script>
    <!-- endbower -->
    <!-- endbuild -->
  </body>
</html>
